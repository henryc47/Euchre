{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "type": "shell",
    "options": 
    {
        "cwd":"${workspaceRoot}../build"
    },
    "tasks": [
        {
            "label": "cmake",
            "command": "cmake -G 'Unix Makefiles' -DCMAKE_BUILD_TYPE=Debug ..",
            "type": "shell",
            "presentation": {
            "echo": true,
            "reveal": "always",
            "panel": "shared"
        }
        }, 
        {
            "label": "make",
            "command":"make -j 8",
            "type": "shell",
            "presentation": {
            "echo": true,
            "reveal": "always",
            "panel": "shared"
        },
        "group": "build"
        }
    ]
}